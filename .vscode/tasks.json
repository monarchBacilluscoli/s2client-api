// I know what it means, it is just a json let you write what you want to do before dubugging
{
    "tasks": [
        {
            "type": "shell",
            "label": "cmake debug",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=debug",
                "../"
            ],
            "options": {
                "cwd": "${cwd}/build"
            }
        },
        {
            "type": "shell",
            "label": "make the entire project",
            "command": "make",
            "args": [ 
                "-j" // let the make be able to build multiple tasks for one time
            ],
            "options": {
                "cwd": "${cwd}/build"
            }
        },
        {
            "type": "shell",
            "label": "kill previous SC2 processes",
            "command": "ps -aux| grep SC2_x64 | grep -v grep |awk '{print $2}' | xargs kill",
            "args": [],
            "options": {
                "cwd": "${cwd}/"
            }
        },
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ],
    "version": "2.0.0"
}